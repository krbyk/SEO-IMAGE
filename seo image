    <script>
        let imageFile = null;
        let imageBase64 = null;
        let apiKey = '';
        let currentResults = {};

        function validateApiKey() {
            const input = document.getElementById('apiKey');
            apiKey = input.value.trim();
            if (apiKey) {
                document.getElementById('apiSection').classList.add('hidden');
                updateAnalyzeButton();
            }
        }

        function handleImageUpload(event) {
            const file = event.target.files[0];
            if (file) {
                imageFile = file;
                const reader = new FileReader();
                reader.onloadend = () => {
                    imageBase64 = reader.result;
                    document.getElementById('previewImg').src = imageBase64;
                    document.getElementById('uploadPlaceholder').classList.add('hidden');
                    document.getElementById('imagePreview').classList.remove('hidden');
                    document.getElementById('results').classList.add('hidden');
                    document.getElementById('resultsPlaceholder').classList.remove('hidden');
                    document.getElementById('errorMessage').classList.add('hidden');
                    updateAnalyzeButton();
                };
                reader.readAsDataURL(file);
            }
        }

        function updateAnalyzeButton() {
            const btn = document.getElementById('analyzeBtn');
            btn.disabled = !(imageFile && apiKey);
        }

        async function analyzeImage() {
            if (!imageFile || !apiKey) return;

            const btn = document.getElementById('analyzeBtn');
            btn.disabled = true;
            btn.innerHTML = `
                <div class="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                Analyse en cours...
            `;

            document.getElementById('errorMessage').classList.add('hidden');

            try {
                const base64Data = imageBase64.split(',')[1];
                
                const response = await fetch("https://api.anthropic.com/v1/messages", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        "x-api-key": apiKey,
                        "anthropic-version": "2023-06-01"
                    },
                    body: JSON.stringify({
                        model: "claude-3-5-sonnet-20241022",
                        max_tokens: 1024,
                        messages: [{
                            role: "user",
                            content: [
                                {
                                    type: "image",
                                    source: {
                                        type: "base64",
                                        media_type: imageFile.type,
                                        data: base64Data
                                    }
                                },
                                {
                                    type: "text",
                                    text: `Analyse cette image pour le SEO et fournis les informations suivantes au format JSON strict (sans texte additionnel) :

{
  "keywords": ["mot-clé 1", "mot-clé 2", "mot-clé 3", ...],
  "description": "Description SEO optimisée de 150-160 caractères",
  "alt_text": "Texte ALT descriptif et accessible"
}

Consignes :
- Keywords : 8-12 mots-clés pertinents, séparés par des virgules
- Description : optimisée pour les moteurs de recherche, engageante, 150-160 caractères
- Alt text : descriptif précis pour l'accessibilité, 125 caractères max

Réponds UNIQUEMENT avec le JSON, sans markdown ni texte supplémentaire.`
                                }
                            ]
                        }]
                    })
                });

                if (!response.ok) {
                    throw new Error(`Erreur API: ${response.status}`);
                }

                const data = await response.json();
                const textContent = data.content.find(c => c.type === 'text')?.text || '';
                
                let cleanedText = textContent.trim();
                cleanedText = cleanedText.replace(/```json\s*/g, '').replace(/```\s*/g, '');
                
                const parsed = JSON.parse(cleanedText);
                
                currentResults = {
                    keywords: Array.isArray(parsed.keywords) ? parsed.keywords.join(', ') : parsed.keywords,
                    description: parsed.description,
                    altText: parsed.alt_text
                };

                displayResults();
                
            } catch (error) {
                console.error('Erreur:', error);
                const errorDiv = document.getElementById('errorMessage');
                errorDiv.querySelector('p').textContent = "Erreur lors de l'analyse. Vérifiez votre clé API et réessayez.";
                errorDiv.classList.remove('hidden');
            } finally {
                btn.disabled = false;
                btn.innerHTML = `
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    Analyser l'image
                `;
            }
        }

        function displayResults() {
            document.getElementById('keywordsText').textContent = currentResults.keywords;
            document.getElementById('descriptionText').textContent = currentResults.description;
            document.getElementById('descriptionLength').textContent = `${currentResults.description.length} caractères`;
            document.getElementById('altText').textContent = currentResults.altText;
            document.getElementById('altLength').textContent = `${currentResults.altText.length} caractères`;
            
            document.getElementById('resultsPlaceholder').classList.add('hidden');
            document.getElementById('results').classList.remove('hidden');
        }

        async function copyToClipboard(type) {
            let text = '';
            let iconId = '';
            
            if (type === 'keywords') {
                text = currentResults.keywords;
                iconId = 'copyIconKeywords';
            } else if (type === 'description') {
                text = currentResults.description;
                iconId = 'copyIconDesc';
            } else if (type === 'alt') {
                text = currentResults.altText;
                iconId = 'copyIconAlt';
            }

            await navigator.clipboard.writeText(text);
            
            const icon = document.getElementById(iconId);
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>';
            
            setTimeout(() => {
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>';
            }, 2000);
        }
    </script>
</body>
</html>
